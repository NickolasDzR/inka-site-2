mixin title(value = false)
    +b.SECTION.title
        .container
            .row.title__row
                +e.content
                    +b.pouf-wrp
                        +b.IMG.pouf._small(src="img/content/pouf-small.webp")
                    +b.pouf-wrp
                        +b.IMG.pouf._big(src="img/content/pouf-big.webp")
                    +e.H1.heading #{value.heading}
                    +e.text !{value.text}
                    +e.IMG.img-title(src=`img/content/title-mob.webp` srcset=`img/content/title-mob@x2.webp 2x` media="(min-width: 767px)" height="335" width="320")
                    +e.store._mob
                        +e.P.store-text coming soon
                        +e.store-img-wrp
                            +appBtn({iconName: "appstore", class: "offer__store", viewbox: "0 0 158 37"})
                            +appBtn({iconName: "googleplay", class: "offer__store", viewbox: "0 0 167 36"})
                +e.img
                    +e.IMG.img-title-desk(src=`img/content/title-desk.webp` srcset=`img/content/title-desk@x2.webp 2x` media="(max-width: 767px)" width="591" height="620")
                    //+b.IMG(class="lozad" data-src=`img/content/title-desk.webp` data-srcset=`img/content/title-desk@x2.webp 2x` media="(max-width: 767px)" width="591" height="620")
                +e.store
                    +e.P.store-text coming soon
                    +e.store-img-wrp
                        +appBtn({iconName: "appstore", class: "offer__store", viewbox: "0 0 158 37"})
                        +appBtn({iconName: "googleplay", class: "offer__store", viewbox: "0 0 167 36"})
